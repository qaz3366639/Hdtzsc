<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    
    <style name="edit_text_login_register">
        <item name="met_baseColor">#0056d3</item>
        <item name="met_primaryColor">#982360</item>
        <item name="met_floatingLabel">highlight</item>
        <item name="met_singleLineEllipsis">true</item>
        <item name="met_autoValidate">true</item>
        <item name="met_clearButton">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="text_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:drawableRight">@mipmap/ic_jiantou_right</item>
        <item name="android:background">@drawable/selector_text_item</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="edit_text_upload_goods">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="met_baseColor">#0056d3</item>
        <item name="met_primaryColor">#982360</item>
        <item name="met_floatingLabel">highlight</item>
        <item name="met_singleLineEllipsis">true</item>
        <item name="met_autoValidate">true</item>
        <item name="met_clearButton">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="btn_upload_goods_image">
        <item name="android:layout_width">@dimen/upload_goods_btn_w</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/upload_goods_text_title</item>
        <item name="cpb_selectorIdle">@drawable/selector_upload_image_btn</item>
        <item name="cpb_textComplete">@string/upload_success</item>
        <item name="cpb_textError">@string/upload_fail</item>
        <item name="cpb_textIdle">@string/click_upload</item>
        <item name="cpb_cornerRadius">48dp</item>
    </style>

    <style name="app_theme_btn">
        <item name="pb_colorComplete">@color/btn_complete</item>
        <item name="pb_colorNormal">@color/btn_normal</item>
        <item name="pb_colorPressed">@color/btn_pressed</item>
        <item name="pb_colorProgress">@color/purple_progress</item>
        <item name="pb_colorError">@color/red_error</item>
    </style>
</resources>
